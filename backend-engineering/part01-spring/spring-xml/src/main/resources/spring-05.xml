<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="happyComponent" class="com.kototo.spring.pojo.HappyComponent">
        <property name="componentName" value="abc"/>
        <property name="happyMachine">
            <bean class="com.kototo.spring.pojo.HappyMachine">
                <property name="machineName" value="扣秃秃"/>
            </bean>
        </property>
    </bean>

</beans>